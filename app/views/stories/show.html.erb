<div class="min-h-screen bg-gray-50">
  <!-- Story Header -->
  <div class="bg-white shadow-sm border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900"><%= @story.title %></h1>
          <% if @story.story_profile %>
            <p class="text-gray-600 mt-1"><%= @story.story_profile.full_name %></p>
          <% end %>
        </div>
        <div class="flex items-center space-x-3">
          <%= link_to "Dashboard", dashboard_path, class: "text-gray-600 hover:text-gray-800" %>
          <%= link_to "Edit Story", edit_story_path(@story), class: "px-4 py-2 bg-gray-200 hover:bg-gray-300 rounded-lg" %>
          <% if @story.story_profile %>
            <%= link_to "Edit Profile", edit_story_profile_path(@story), class: "px-4 py-2 bg-indigo-100 text-indigo-700 hover:bg-indigo-200 rounded-lg font-medium" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
      <!-- Sidebar: Chapters -->
      <div class="lg:col-span-1">
        <div class="bg-white rounded-lg shadow-lg p-6 sticky top-8">
          <div class="flex items-center justify-between mb-4">
            <h2 class="text-xl font-bold text-gray-800">Chapters</h2>
            <%= link_to "+", new_story_chapter_path(@story), class: "w-8 h-8 bg-indigo-600 text-white rounded-full flex items-center justify-center hover:bg-indigo-700 font-bold text-xl", title: "Add Chapter" %>
          </div>
          
          <div class="space-y-2">
            <% @chapters.each do |chapter| %>
              <div class="p-3 rounded-lg hover:bg-gray-50 cursor-pointer border-l-4 <%= chapter == @chapters.first ? 'border-indigo-600 bg-indigo-50' : 'border-transparent' %>">
                <%= link_to story_chapter_path(@story, chapter), class: "block" do %>
                  <div class="flex items-start">
                    <span class="text-2xl mr-3"><%= chapter.life_phase&.icon || 'ðŸ“„' %></span>
                    <div class="flex-1">
                      <h3 class="font-semibold text-gray-800 text-sm"><%= chapter.title %></h3>
                      <p class="text-xs text-gray-500 mt-1"><%= chapter.story_sections.count %> sections</p>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Main Content -->
      <div class="lg:col-span-3">
        <% if @story.chapters.empty? %>
          <!-- Empty State -->
          <div class="bg-white rounded-xl shadow-lg p-12 text-center">
            <span class="text-6xl block mb-4">ðŸ“–</span>
            <h2 class="text-2xl font-bold text-gray-800 mb-2">Ready to Start Your Story</h2>
            <% if @story.story_profile %>
              <p class="text-gray-600 mb-6">Your profile is complete! Generate chapters automatically or create them manually.</p>
              <div class="flex justify-center space-x-4">
                <%= button_to "Generate Chapters Automatically", generate_story_chapters_path(@story), method: :post, class: "inline-block bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-8 py-3 rounded-lg font-bold hover:from-indigo-700 hover:to-purple-700 shadow-lg" %>
                <%= link_to "Create First Chapter Manually", new_story_chapter_path(@story), class: "inline-block bg-gray-600 text-white px-6 py-3 rounded-lg font-bold hover:bg-gray-700" %>
              </div>
            <% else %>
              <p class="text-gray-600 mb-6">Complete your profile to help organize your story.</p>
              <%= link_to "Complete Profile", new_story_profile_path(@story), class: "inline-block bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-8 py-3 rounded-lg font-bold hover:from-indigo-700 hover:to-purple-700 shadow-lg" %>
            <% end %>
          </div>
        <% else %>
          <!-- Story Overview -->
          <div class="bg-white rounded-xl shadow-lg p-8 mb-6">
            <h2 class="text-2xl font-bold text-gray-800 mb-4">Story Overview</h2>
            
            <div class="grid grid-cols-3 gap-6 mb-6">
              <div class="text-center p-4 bg-indigo-50 rounded-lg">
                <div class="text-3xl font-bold text-indigo-600"><%= @story.chapters.count %></div>
                <div class="text-sm text-gray-600 mt-1">Chapters</div>
              </div>
              <div class="text-center p-4 bg-purple-50 rounded-lg">
                <div class="text-3xl font-bold text-purple-600"><%= @story.story_sections.count %></div>
                <div class="text-sm text-gray-600 mt-1">Sections</div>
              </div>
              <div class="text-center p-4 bg-green-50 rounded-lg">
                <div class="text-3xl font-bold text-green-600"><%= @story.status.titleize %></div>
                <div class="text-sm text-gray-600 mt-1">Status</div>
              </div>
            </div>
            
            <div class="prose max-w-none">
              <p class="text-gray-600"><%= @story.subtitle %></p>
            </div>
          </div>

          <!-- Chapters List -->
          <div class="space-y-4">
            <% @chapters.each do |chapter| %>
              <div class="bg-white rounded-xl shadow-lg overflow-hidden hover:shadow-xl transition-shadow">
                <div class="bg-gradient-to-r from-indigo-500 to-purple-500 px-6 py-4">
                  <div class="flex items-center justify-between">
                    <div class="flex items-center space-x-3">
                      <span class="text-3xl"><%= chapter.life_phase&.icon || 'ðŸ“„' %></span>
                      <div>
                        <h3 class="text-xl font-bold text-white"><%= chapter.title %></h3>
                        <p class="text-indigo-100 text-sm"><%= chapter.description %></p>
                      </div>
                    </div>
                    <%= link_to "View Chapter â†’", story_chapter_path(@story, chapter), class: "bg-white text-indigo-600 px-4 py-2 rounded-lg font-semibold hover:bg-indigo-50" %>
                  </div>
                </div>
                
                <div class="px-6 py-4">
                  <% if chapter.story_sections.any? %>
                    <div class="space-y-2">
                      <% chapter.story_sections.order(:sort_order).limit(3).each do |section| %>
                        <div class="flex items-center justify-between py-2 border-b border-gray-100">
                          <span class="text-gray-700"><%= section.title %></span>
                          <%= link_to "Edit", edit_story_chapter_section_path(@story, chapter, section), class: "text-indigo-600 hover:text-indigo-800 text-sm font-medium" %>
                        </div>
                      <% end %>
                      <% if chapter.story_sections.count > 3 %>
                        <p class="text-sm text-gray-500 pt-2">+ <%= chapter.story_sections.count - 3 %> more sections</p>
                      <% end %>
                    </div>
                  <% else %>
                    <div class="text-center py-4">
                      <p class="text-gray-500 mb-3">No sections yet</p>
                      <%= link_to "Add First Section", new_story_chapter_section_path(@story, chapter), class: "inline-block text-indigo-600 hover:text-indigo-800 font-medium" %>
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

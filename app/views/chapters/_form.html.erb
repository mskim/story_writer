<div class="min-h-screen bg-gradient-to-br from-slate-50 to-blue-100 py-12 px-4">
  <div class="max-w-3xl mx-auto">
    <div class="mb-6">
      <%= link_to "â† Back to Story", story_path(@story), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
    </div>

    <div class="bg-white shadow-2xl rounded-2xl overflow-hidden">
      <!-- Header -->
      <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-8 py-6">
        <h1 class="text-3xl font-bold text-white"><%= @chapter.persisted? ? "Edit Chapter" : "New Chapter" %></h1>
        <p class="text-indigo-100 mt-2">Organize your story into chapters</p>
      </div>

      <div class="p-8">
        <%= form_with(model: [@story, @chapter], class: "space-y-8") do |f| %>
          
          <!-- Title -->
          <div>
            <%= f.label :title, "Chapter Title", class: "block text-sm font-bold text-gray-700 mb-2" %>
            <%= f.text_field :title, class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500 text-lg font-semibold", placeholder: "e.g., Early Childhood", required: true %>
          </div>

          <!-- Description -->
          <div>
            <%= f.label :description, "Description (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.text_area :description, rows: 3, class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "Briefly describe what this chapter covers..." %>
          </div>

          <!-- Life Phase (Optional) -->
          <div>
            <%= f.label :life_phase_id, "Life Phase Template (Optional)", class: "block text-sm font-medium text-gray-700 mb-2" %>
            <%= f.collection_select :life_phase_id, LifePhase.order(:sort_order), :id, :name, { include_blank: "Custom Chapter (No Template)" }, { class: "w-full px-4 py-3 border-2 border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" } %>
            <p class="text-sm text-gray-500 mt-1">Selecting a template will provide suggested topics for sections in this chapter.</p>
          </div>

          <!-- Submit -->
          <div class="flex items-center justify-between pt-6 border-t-2 border-gray-200">
            <%= link_to "Cancel", story_path(@story), class: "text-gray-600 hover:text-gray-800 font-medium" %>
            <%= f.submit @chapter.persisted? ? "Update Chapter" : "Create Chapter", class: "bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-8 py-3 rounded-lg font-bold hover:from-indigo-700 hover:to-purple-700 shadow-lg cursor-pointer" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</div>

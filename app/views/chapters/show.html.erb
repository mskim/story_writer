<div class="min-h-screen bg-gray-50 py-8 px-4">
  <div class="max-w-6xl mx-auto">
    <!-- Header -->
    <div class="mb-6">
      <%= link_to "‚Üê Back to Story", story_path(@story), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
    </div>

    <div class="bg-white rounded-xl shadow-2xl overflow-hidden">
      <!-- Chapter Header -->
      <div class="bg-gradient-to-r from-indigo-600 to-purple-600 px-8 py-6">
        <div class="flex items-center justify-between">
          <div class="flex items-center space-x-4">
            <span class="text-5xl"><%= @chapter.life_phase&.icon || 'üìÑ' %></span>
            <div>
              <h1 class="text-3xl font-bold text-white"><%= @chapter.title %></h1>
              <p class="text-indigo-100 mt-1"><%= @chapter.description %></p>
            </div>
          </div>
          <%= link_to "Edit Chapter", edit_story_chapter_path(@story, @chapter), class: "bg-white text-indigo-600 px-4 py-2 rounded-lg font-semibold hover:bg-indigo-50" %>
        </div>
      </div>

      <!-- Sections -->
      <div class="p-8">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-bold text-gray-800">Sections</h2>
          <%= link_to "Add New Section", new_story_chapter_section_path(@story, @chapter), class: "bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-6 py-3 rounded-lg font-bold hover:from-indigo-700 hover:to-purple-700 shadow-lg" %>
        </div>

        <% if @sections.any? %>
          <div class="space-y-4">
            <% @sections.each do |section| %>
              <div class="border-2 border-gray-200 rounded-lg p-6 hover:border-indigo-300 transition-colors">
                <div class="flex items-start justify-between mb-3">
                  <div class="flex-1">
                    <h3 class="text-xl font-bold text-gray-800"><%= section.title %></h3>
                    <% if section.start_year || section.end_year %>
                      <p class="text-sm text-gray-500 mt-1">
                        <% if section.start_year && section.end_year %>
                          <%= section.start_year %> - <%= section.end_year %>
                        <% elsif section.start_year %>
                          <%= section.start_year %>
                        <% else %>
                          <%= section.end_year %>
                        <% end %>
                      </p>
                    <% end %>
                  </div>
                  <div class="flex items-center space-x-2">
                    <%= link_to "Edit", edit_story_chapter_section_path(@story, @chapter, section), class: "text-indigo-600 hover:text-indigo-800 font-medium" %>
                    <%= button_to "Delete", story_chapter_section_path(@story, @chapter, section), method: :delete, data: { confirm: "Are you sure?" }, class: "text-red-600 hover:text-red-800 font-medium" %>
                  </div>
                </div>
                
                <% if section.content.present? %>
                  <div class="prose max-w-none text-gray-700">
                    <%= section.content.to_plain_text.truncate(200) %>
                  </div>
                <% else %>
                  <p class="text-gray-400 italic">No content yet</p>
                <% end %>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12 bg-gray-50 rounded-lg">
            <span class="text-6xl block mb-4">‚úçÔ∏è</span>
            <h3 class="text-xl font-bold text-gray-800 mb-2">No Sections Yet</h3>
            <p class="text-gray-600 mb-6">Start writing your story by adding the first section.</p>
            <%= link_to "Add First Section", new_story_chapter_section_path(@story, @chapter), class: "inline-block bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-8 py-3 rounded-lg font-bold hover:from-indigo-700 hover:to-purple-700 shadow-lg" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
